<section class="admin-products-index">
  <header class="page-header">
    <h1>Admin &raquo; All Categories</h1>
  </header>

  <div class="well">
    <%= link_to "+ New Category", %i[new admin category], class: "btn btn-info" %>
  </div>

  <div class="panel panel-default categories">
    <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col">Category Name</th>
          <th scope="col">Products Count</th>
        </tr>
      </thead>
      <tbody>
        <% @categories.each do |category| %>

          <tr>
            <th scope="row"><%= category.name %></th>
            <th scope="row"><%= category.products.count %></th>

          </tr>

        <% end %>
      </tbody>
    </table>

  </div>
</section>
